ORIG_PN="pygobject"
inherit pygtk

DESCRIPTION="Python bindings for GNOME 3 libraries"


DEPEND="girepository(GLib-2.0)
	pkgconfig(cairo)
	python(cairo)"

PKG_NAMES="${PN} ${PN}-devel"
python_gi_CONTENTS="usr/bin/ ${PYTHON_SITELIB#/} usr/share/"
python_gi_devel_CONTENTS="usr/include/ usr/lib/pkgconfig/"
PKG_IGNORE="usr/lib/lib*"

CYGCONF_ARGS="
	PYTHON=/usr/bin/python${PYTHON_VERSION}
	FFI_CFLAGS=-DHAVE_FFI_H
	FFI_LIBS=-lffi
"

KEEP_LA_FILES="none"
